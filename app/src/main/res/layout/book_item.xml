<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="downloadable_book"
            type="com.example.android.bookdroid.network.DownloadableBook" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="311dp"
            app:imageUrl="@{downloadable_book.cover.get(&quot;medium&quot;)}"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@{downloadable_book.title}"
            android:maxLines="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`Publish date: ` + downloadable_book.publishDate}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`No. pages: ` + String.valueOf(downloadable_book.numberPages)}"/>

    </LinearLayout>
</layout>